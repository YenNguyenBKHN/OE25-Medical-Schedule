<% provide :title, t("signin") %>

<h1><%= t "signin" %></h1>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for :session, url: signin_path do |f| %>
        <%= f.label t("mail") %>
        <%= f.email_field :mail, class: "form-control" %>

        <%= f.label t("pass") %>
        <%# <%= link_to t("forgot_password"), new_password_reset_path %>
        <%= f.password_field :password, class: "form-control" %>

        <%= f.label t("remember"), class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span><%= t "remember_me" %></span>
        <% end %>

        <%= f.submit t("signin"), class: "btn custom_btn " %>
      <% end %>

      <p><%= t "new_user" %> <%= link_to t("signup_now"), signup_path %></p>
    </div>
  </div>
</div>
