<div class="contact_form">
  <%= form_for @appointment do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <% if current_user.present? %>
      <%= f.fields_for :patient do |ff| %>
        <div class="row">
          <div class="col-lg-6 col-md-12">
            <%= ff.label t "full_name" %>
            <%= ff.text_field :full_name, class: "height-input-second",
              value: current_user.full_name %>
          </div>
          <div class="col-lg-6 col-md-12">
            <%= ff.label t "phone" %>
            <%= ff.text_field :phone, class: "height-input-second",
              value: current_user.phone %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= ff.label t "email" %>
            <%= ff.email_field :email, class: "height-input-second",
              value: current_user.email %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= ff.label t "address" %>
            <%= ff.text_field :address, class: "height-input-second",
              value: current_user.address %>
          </div>
        </div>
      <% end %>
    <% end %>
    <div class="row">
      <div class="col-lg-6 col-md-12">
        <%= f.label t "doctor" %>
        <%= f.select :doctor_id, doctors,
          {}, class: "select-be height-input-second" %>
      </div>
      <div class="col-lg-4 col-md-12">
        <%= f.label t "day" %>
        <%= f.date_field :day, class: "height-input-second",
         min: earliest_day_register, max: latest_day_register %>
      </div>
      <div>
        <div class="col-lg-2 col-md-12">
          <%= f.label t "start_time" %>
          <%= f.select :start_time, from_time_all,
            {}, class: "select-be height-input-second" %>
        </div>
      </div>
    </div>
    <div class="row padding-message">
      <div class="col col-md-12 message-nice">
        <%= f.text_area :message, placeholder: t("message") %>
      </div>
    </div>
    <div class="row text">
      <div class="col col-md-12">
        <%= f.submit t("submit"), class: "custom_btn btn-submit" %>
      </div>
    </div>
  <% end %>
</div>
