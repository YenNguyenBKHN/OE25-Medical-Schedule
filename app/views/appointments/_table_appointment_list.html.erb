<table id="example2" class="table table-bordered table-hover text-center table-nice">
  <thead>
    <tr class="background-color">
      <th><%= t "stt" %></th>
      <th><%= t "doctor_name" %></th>
      <th><%= t "patient_name" %></th>
      <th><%= t "start_time" %></th>
      <th><%= t "end_time" %></th>
      <th><%= t "day" %></th>
      <th><%= t "room" %></th>
      <th class="action-head"><%= t "action" %></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr class="trow">
        <td></td>
        <td><%= appointment.doctor_full_name %></td>
        <td><%= appointment.patient_full_name %></td>
        <td><%= appointment.start_time %></td>
        <td><%= appointment.end_time %></td>
        <td><%= appointment.day %></td>
        <td><%= appointment.doctor_room %></td>
        <% if appointment.waiting? || appointment.cancel?  %>
          <td>
            <button type="button" class="btn btn-primary btn-color"><%= t "accept" %></button>
            <button type="button" class="btn btn-danger"><%= t "cancel" %></button>
          </td>
        <% elsif appointment.accept? %>
        <td>
          <button type="button" class="btn btn-danger"><%= t "cancel" %></button>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
