<header>
  <div class="header_top_area">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-4 col-md-12">
          <div class="htl">
            <p><%= t "welcome_app" %></p>
          </div>
        </div>
        <div class="col-lg-8 col-md-12 text-right">
          <div class="htr">
            <i class="zmdi zmdi-phone"></i><%= t "phone" %>
            <%= link_to "mailto:huel.simone@hotmail.com", class:"htr_single_contact" do %>
              <i class="zmdi zmdi-email"></i><%= t "email" %>
            <% end %>
            <ul class="htr_language">
              <li>
                <%= link_to "#" do %>
                  <i class="zmdi zmdi-caret-down"></i><%= t "language" %>
                <% end %>
                <ul>
                  <li><%= link_to "English", locale: "en" %></li>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="header_area">
    <div class="container">
      <div class="row">
        <div class="col-lg-2 col-6">
          <%= link_to home_path, class:"site_logo", data: {turbolinks: "false"} do %>
            <%= image_tag "logo.png" %>
          <% end %>
        </div>
        <div class="col-lg-10 text-center col-6">
          <nav class="menu_bar">
            <ul class="main_menu">
              <li><%= link_to t("home"), home_path, data: {turbolinks: "false"} %></li>
              <li><%= link_to t("apointment"), "#" %></li>
              <li><%= link_to t("doctor"), "#" %>
                <ul>
                  <li><%= link_to t("doctor_list"), "#" %></li>
                  <li><%= link_to t("doctor_details"), "#" %></li>
                </ul>
              </li>
              <li><%= link_to t("about"), about_path, data: {turbolinks: "false"} %></li>
              <li><%= link_to t("login"), "#" %></li>
              <li><%= link_to t("signup"), "#" %></li>
            </ul>
            <form action="#" class="search_form">
              <input type="search" placeholder="Search here">
              <button type="submit"><i class="zmdi zmdi-search"></i></button>
            </form>
          </nav>
        </div>
      </div>
    </div>
  </div>
</header>
