<% provide :title, t("news") %>
<div class="breadvroumb_area">
  <div class="container">
    <div class="row text-center">
      <div class="col">
        <h1><%= t "news_list" %></h1>
        <div class="breadcroumb_link">
          <%= link_to t("home"), root_url %>/<%= link_to t("news_list"), news_index_path %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="blog_area">
  <div class="container">
    <div class="row">
      <div class="col-md-8 order-md-12">
        <div class="row">
          <%= render @news %>
        </div>
        <%= paginate @news %>
      </div>
      <%= render "slidebar" %>
    </div>
  </div>
</div>
